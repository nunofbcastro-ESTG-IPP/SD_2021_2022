<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="585.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="estg.ipp.pt.screenscontroller.admin.LinesController">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="426.0" prefWidth="585.0" styleClass="mylistview">
            <content>
                <VBox fx:id="content" prefHeight="439.0" prefWidth="566.0" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding></VBox>
            </content>
        </ScrollPane>
        <HBox alignment="CENTER_LEFT" prefHeight="28.0" prefWidth="585.0" spacing="15.0">
            <children>
                <TextField fx:id="messageTextField" prefHeight="25.0" prefWidth="257.0" />
                <Button fx:id="buttonSend" mnemonicParsing="false" onAction="#OnCreateLine" styleClass="button1" text="Criar Linha" />
                <Button mnemonicParsing="false" onAction="#onClickOpenLines" text="Abrir linhas">
                    <styleClass>
                        <String fx:value="button" />
                        <String fx:value="button1" />
                    </styleClass>
                </Button>
                <Button fx:id="buttonStateLine" mnemonicParsing="false" onAction="#onClickCloseLines" text="Fechar linhas">
                    <styleClass>
                        <String fx:value="button" />
                        <String fx:value="button4" />
                    </styleClass>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets top="10.0" />
    </padding>
</VBox>
