<VBox alignment="TOP_CENTER" prefHeight="500.0" prefWidth="585.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="estg.ipp.pt.screenscontroller.admin.NotifyLinesController">
    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true" prefHeight="426.0" prefWidth="585.0" styleClass="mylistview">
