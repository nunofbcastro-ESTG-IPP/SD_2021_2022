                <VBox fx:id="content" prefHeight="439.0" prefWidth="566.0" spacing="20.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding></VBox>
            </content>
        </ScrollPane>
        <HBox alignment="CENTER_LEFT" prefHeight="28.0" prefWidth="585.0" spacing="15.0">
            <children>
                <CheckComboBox fx:id="linesComboBox" prefWidth="150.0" />
                <TextField fx:id="messageTextField" prefHeight="25.0" prefWidth="311.0" />
                <Button fx:id="buttonSend" mnemonicParsing="false" styleClass="button1" text="Enviar" onAction="#OnClickSend"/>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets top="10.0" />
    </padding>
