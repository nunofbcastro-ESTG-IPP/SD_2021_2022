<BorderPane fx:id="borderPane" prefHeight="500.0" prefWidth="800.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="estg.ipp.pt.screenscontroller.admin.HomeController">
<left>
    <VBox alignment="CENTER" prefHeight="500.0" prefWidth="215.0" spacing="25.0" styleClass="menu">
        <children>
            <ImageView fitHeight="81.0" fitWidth="178.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../logo-white.png" />
                </image>
                <VBox.margin>
                    <Insets bottom="15.0" />
                </VBox.margin>
            </ImageView>
            <Line endX="100.0" startX="-100.0" stroke="#09b244" />
            <Button mnemonicParsing="false" onAction="#OpenLinesManagement" text="Gerir linhas" />
            <Line endX="100.0" startX="-100.0" stroke="#09b244" />
            <Button mnemonicParsing="false" onAction="#OpenNotifyLines" text="Notificar linhas" />
            <Line endX="100.0" startX="-100.0" stroke="#09b244" />
            <Button mnemonicParsing="false" onAction="#OpenUsersManagement" text="Gerir utilizadores" />
            <Line endX="100.0" startX="-100.0" stroke="#09b244" />
        </children>
    </VBox>
</left>
</BorderPane>
