<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<BorderPane fx:id="borderPane" prefHeight="500.0" prefWidth="800.0" stylesheets="@../../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="estg.ipp.pt.sd_grupo6_client.ScreensController.passenger.HomePassengerController">
    <left>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="215.0" spacing="25.0" styleClass="menu">
            <children>
                <ImageView fitHeight="81.0" fitWidth="178.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../logo-white.png" />
                    </image>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </ImageView>
                <Line endX="100.0" startX="-100.0" stroke="#09b244" />
                <Button mnemonicParsing="false" onAction="#OpenLinesScreen" text="Ver linhas" />
                <Line endX="100.0" startX="-100.0" stroke="#09b244" />
                <Button mnemonicParsing="false" onAction="#OpenSubscribeScreen" text="Subscrever a novas linhas" />
                <Line endX="100.0" startX="-100.0" stroke="#09b244" />
                <Button mnemonicParsing="false" onAction="#SignoutClick" text="Sair" />
                <Line endX="100.0" startX="-100.0" stroke="#09b244" />
            </children>
        </VBox>
    </left>
</BorderPane>
